---
const {
  titulo = "New notification!",
  texto = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore?",
} = Astro.props;
---

<div class="flex justify-center">
  <div
    role="alert"
    class="mx-4 max-w-lg rounded-lg bg-stone-100 p-4 shadow-lg sm:p-6 lg:p-8"
  >
    <div class="flex items-center gap-4">
      <span class="shrink-0 rounded-full bg-emerald-400 p-2 text-white">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 16 16"
          fill="currentColor"
          class="h-4 w-4"
        >
          <path
            d="M1 4C1 2.34315 2.34315 1 4 1H12C13.6569 1 15 2.34315 15 4V5H1V4Z"
            fill="#ffff"></path>
          <path d="M1 11H15V15H1V11Z" fill="#ffff"></path>
          <path d="M16 7H0V9H16V7Z" fill="#ffff"></path>
        </svg>
      </span>

      <p class="font-medium sm:text-lg text-emerald-600">{titulo}</p>
    </div>

    <p class="mt-4 text-gray-600 text-justify">{texto}</p>
  </div>
</div>

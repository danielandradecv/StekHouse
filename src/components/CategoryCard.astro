---
const { title = "titulo", link = "/public/images/carneng.png" } = Astro.props;
---

<div>
  <div
    class="m-2 h-[400px] group px-10 py-5 bg-white rounded-lg flex flex-col items-center justify-center gap-2 relative after:absolute after:h-full after:bg-[#ff8a3c] z-20 shadow-lg after:-z-20 after:w-full after:inset-0 after:rounded-lg transition-all duration-300 hover:transition-all hover:duration-300 after:transition-all after:duration-500 after:hover:transition-all after:hover:duration-500 overflow-hidden cursor-pointer after:-translate-y-full after:hover:translate-y-0 [&_p]:delay-200 [&_p]:transition-all"
  >
    <img class="w-[250px]" src={link} alt="" />

    <p
      class="cardtxt font-bold text-black tracking-wider group-hover:text-black text-xl"
    >
      {title}
    </p>
  </div>
</div>
